# ===========================================
# Movie Dubber - cPanel Production Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# Application Settings
APP_NAME="Movie Dubber"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_KEY=

# Database Configuration (cPanel MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_cpanel_prefix_dubber
DB_USERNAME=your_cpanel_prefix_user
DB_PASSWORD=your_database_password

# Queue, Cache, Sessions (all via MySQL - no Redis on shared hosting)
QUEUE_CONNECTION=database
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_CONNECTION=default
SESSION_LIFETIME=120

# Queue tuning for long-running dubbing jobs
DB_QUEUE_RETRY_AFTER=3600

# Filesystem
FILESYSTEM_DISK=local

# ===========================================
# External API Keys (REQUIRED)
# ===========================================

# Hugging Face Token (for WhisperX diarization on RunPod)
HF_TOKEN=your_huggingface_token_here

# OpenAI API Key (for translation)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# RunPod GPU Services (REQUIRED)
# ===========================================
# Set these to your RunPod pod's proxy URLs

XTTS_SERVICE_URL=https://your-pod-id-8004.proxy.runpod.net
WHISPERX_SERVICE_URL=https://your-pod-id-8002.proxy.runpod.net
DEMUCS_SERVICE_URL=https://your-pod-id-8000.proxy.runpod.net

# Lipsync (disabled - requires GPU)
LIPSYNC_ENABLED=false

# ===========================================
# Storage & Cleanup
# ===========================================

# Delete intermediate files after dubbing to save disk space
DELETE_AFTER_DUBBING=true

# ===========================================
# Logging
# ===========================================

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=warning
