# ===========================================
# Movie Dubber - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# Application Settings
APP_NAME="Movie Dubber"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=

# Database Configuration (Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=movie_dubber
DB_USERNAME=movie
DB_PASSWORD=movie
DB_ROOT_PASSWORD=root

# Queue & Cache (Redis)
QUEUE_CONNECTION=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CLIENT=predis
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_CONNECTION=default

# Filesystem
FILESYSTEM_DISK=local

# ===========================================
# External API Keys (REQUIRED)
# ===========================================

# Hugging Face Token
# Get your token from: https://huggingface.co/settings/tokens
# Required for:
#   - Speaker diarization (pyannote/speaker-diarization-3.1)
#   - Gender recognition model
# You need to accept the model terms at:
#   - https://huggingface.co/pyannote/speaker-diarization-3.1
#   - https://huggingface.co/pyannote/segmentation-3.0
HF_TOKEN=your_huggingface_token_here

# OpenAI API Key
# Get your key from: https://platform.openai.com/api-keys
# Required for translation (GPT-4)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# RunPod GPU Services (Optional)
# ===========================================
# Used by: php artisan runpod:start
# SSH into an existing RunPod pod to start XTTS + WhisperX
RUNPOD_SSH_HOST=root@<pod-ip>
RUNPOD_SSH_KEY=/path/to/runpod_ssh_key

# Service URLs (auto-set by runpod:start)
# XTTS_SERVICE_URL=https://<pod-id>-8004.proxy.runpod.net
# WHISPERX_SERVICE_URL=https://<pod-id>-8001.proxy.runpod.net

# ===========================================
# Optional Settings
# ===========================================

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Session
SESSION_LIFETIME=120
